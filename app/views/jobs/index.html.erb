<div class="col-md-12">
  <div class="pull-right">
    <%= link_to("Add a job", new_job_path, :class => "btn btn-default") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>$</td>
        <td>Title</td>
        <td>Last Update</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
        <td>$</td>
        <td><%= link_to(job.title, job_path(job)) %></td>
              <td><%= job.updated_at %></td>
        <td>
          <% if current_user && current_user == job.user %>
          <%= link_to("Edit",edit_job_path(job), class: "btn btn-sm btn-default")%>
          <%= link_to("Delete",job_path(job),     class: "btn btn-sm btn-default",
                      method: :delete, data: {confirm: "Are you sure?"})%>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
